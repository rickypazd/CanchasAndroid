<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:gravity="center">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#232B26"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvNombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:textColor="#019B4B"
                        android:textSize="18sp"
                        tools:text="La Bombonera" />

                </LinearLayout>

                <!--la direccion-->
                <TextView
                    android:id="@+id/tvDireccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/ic_icon_direccion"
                    android:drawableTint="@color/colorWhite"
                    android:padding="2dp"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    tools:text="Av. Angamos Este 1551" />

                <!--el numero de telefono-->
                <TextView
                    android:id="@+id/tvNumero"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/ic_icon_phone"
                    android:drawableTint="@color/colorWhite"
                    android:padding="2dp"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    tools:text="[591]-77800221" />

                <!--el correo-->
                <TextView
                    android:id="@+id/tvCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/ic_icon_contacto"
                    android:drawableTint="@color/colorWhite"
                    android:padding="2dp"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    tools:text="bombobera@peloteada.com" />

                <Button
                    android:id="@+id/btn_confirmarD"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="60dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ic_icon_button_crearcuenta"
                    android:text="Reservar"
                    android:textColor="@color/colorBlack"
                    android:textSize="10sp" />
            </LinearLayout>



        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>