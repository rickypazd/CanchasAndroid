<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d8d8d8"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150sp"
        app:cardCornerRadius="10sp"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:orientation="vertical">

            <!--nombre y valoracion-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3">

                    <com.facebook.login.widget.ProfilePictureView
                        android:id="@+id/fb_imagenPerfil"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#000"
                        android:layout_weight="4"
                        android:gravity="center"
                        android:src="@drawable/ic_history"
                        android:textSize="20sp"
                        tools:text="Complejo" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/text_nombre"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="#626262"
                        android:textStyle="normal"
                        android:textAlignment="center"
                        android:text="asdasdasdsasdfsd"
                        android:gravity="center"
                        android:textSize="10dp"/>

                   <RatingBar
                       android:id="@+id/ratingBar"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:backgroundTint="@color/colorPrimaryDark"
                       android:progressTint="#fff200"
                       android:rating="5"
                       android:gravity="center"
                       style="?android:attr/ratingBarStyleSmall"
                       android:scaleX="1"
                       android:scaleY="1"
                       android:max="5"
                       android:layout_weight="1"
                       android:isIndicator="true"
                       android:numStars="5"
                       android:stepSize="0.1"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/text_comentario"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:textSize="12sp"
                    android:text="fsdjkahfksd fsgd fjksghdukfsduyhf isudfk 345345345 b fg f fbklfjkjfk gbjklfj bkljf lbjf fj lbjkl fbh ik hfkdh dfjh "
                    android:textAllCaps="false"
                    android:inputType="textMultiLine"
                    android:textColor="#929292"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>