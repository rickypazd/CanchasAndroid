                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="correo@icloud.com"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
